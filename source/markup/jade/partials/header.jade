          .main-header-submenu
            a(href="#").main-header-submenu__item.main-header-submenu__item--active
              .main-header-submenu__item-icon(style="background-image: url(img/common/header/team-menu-item-1.svg)")
              p.main-header-submenu__item-name Core
            a(href="#").main-header-submenu__item
              .main-header-submenu__item-icon(style="background-image: url(img/common/header/team-menu-item-2.svg)")
              p.main-header-submenu__item-name Leaders
            a(href="#").main-header-submenu__item
              .main-header-submenu__item-icon(style="background-image: url(img/common/header/team-menu-item-3.svg)")
              p.main-header-submenu__item-name Developers
            a(href="#").main-header-submenu__item
              .main-header-submenu__item-icon(style="background-image: url(img/common/header/team-menu-item-4.svg)")
              p.main-header-submenu__item-name QA
            a(href="#").main-header-submenu__item
              .main-header-submenu__item-icon(style="background-image: url(img/common/header/team-menu-item-5.svg)")
              p.main-header-submenu__item-name Administrative
      li.main-header-menu__item
        a(href="#").main-header-menu__item-link Projects
      li.main-header-menu__item
        a(href="#").main-header-menu__item-link Blog
      li.main-header-menu__item
        a(href="#").main-header-menu__item-link Contact Us


script.
  $(function(){
    $('.main-header-submenu__item').hover(function(){
      $('.main-header-submenu__item-name').css({opacity: 1, marginTop: '8px'});
    }, function(){
      $('.main-header-submenu__item-name').css({opacity: 0, marginTop: '-24px'});
    });
  });
header.main-header
  .main-wrapper
    a(href="/").main-header__logo
    ul.main-header-menu
      li.main-header-menu__item.main-header-menu__item--active
        a(href="#").main-header-menu__item-link Home
      li.main-header-menu__item
        a(href="#").main-header-menu__item-link About
      li.main-header-menu__item
        a(href="#").main-header-menu__item-link Team
